gui' = import "//hostname/gui-0.1"

Overview = import "overview"

; slightly dim unfocused panels

; backup: two'way diff

; new messages and upcoming schedules: send notifications to be shown in the tray area of the statusbar

projects = gui.Stack.new()

overview = Overview.new projects

main'view = gui.Overlay.new()
main'view.add projects
main'view.add_overlay overview.container
; keybinding to show the overview

win =
win.add main'view
win.on_destroy mainloop.quit()
mainloop()
